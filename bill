 #include<stdio.h>
void main()
{
    float amount,ds,ta;
    printf("enter  the bill amount\n");
    scanf("%f" ,&amount);
    if(amount<5000)
    ds=0;
    if(amount>=5000&&amount<=10000)
    ds=0.1*amount;
    if(amount>=10001&&amount<=50000)
    ds=0.2*amount;
    if(amount>=50001&&amount<=100000)
    ds=0.3*amount;
    if(amount>100000)
    ds=0.4*amount;
    ta=amount-ds;
    printf("bill amount=%.2f\n ,discount=%.2f\n , total amount=%.2f\n ",amount,ds,ta);
    
}
